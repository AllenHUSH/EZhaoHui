@import "../../colorui/icon.wxss";
@import "../../colorui/main.wxss";

.result-container {
	position: relative;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
	margin: 20rpx auto;
	max-height: 270rpx;
	min-height: 230rpx;
	width: 100%;
	height: 100%;
	border-radius: 15rpx;
}

.result-title {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 656rpx;
    font-size: 40rpx;
    font-weight: 600;
    color: #424242;
}

.result-info {
    margin-top: 35rpx;
	height: 45rpx;
	line-height: 45rpx;
    font-size: 30rpx;
    display: inline-block;
    vertical-align: center;
    overflow: hidden; /*超出的部分隐藏起来。*/
    white-space: nowrap; /*不换行*/
    text-overflow: ellipsis;
    max-width: 656rpx;
	color: #424242;
}
.result-tag{
	display: inline-block;
	margin-top: 20rpx;
	max-width: 220rpx;
	line-height: 45rpx;
	height: 45rpx;
	overflow: hidden; /*超出的部分隐藏起来。*/
    white-space: nowrap; /*不换行*/
    text-overflow: ellipsis;
}
.bg{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border-radius: 15rpx;
	background-color: rgba(0, 0, 0, 0.158);
}
