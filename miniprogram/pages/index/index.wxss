/* miniprogram/pages/index/index.wxss */
page{
	width: 100%;
	/* height: 100%; */
}
.nav_index{
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
	height: 431rpx;
	width: 100%;
}
.wrap{
	margin-top: 440rpx;
	width: 100%;
}
.search{
	box-sizing: border-box;
	position: relative;
	margin: 37.5rpx auto;
	height: 337.5rpx;
	width: 675rpx;
	border:10rpx solid #1cbbb4;
	border-radius: 40rpx;
}
.search .title{
	position: absolute;
	left: 30rpx;
	top: -40rpx;
	line-height: 80rpx;
	width: 340rpx;
	height: 80rpx;
	text-align: center;
	background-color: #f6f6f6;
	color: #0081ff;
}
.search .title .text2{
	color: #1cbbb4;
}
.search textarea{
	box-sizing: border-box;
	padding: 40rpx;
	width: 100%;
	color: #666;
}
.search .up{
	position: absolute;
	right: 20rpx;
	bottom: 20rpx;
	z-index: 10;
	width: 131rpx;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 10rpx;
}
.msg .item{
	box-sizing: border-box;
	position: relative;
	margin: 37.5rpx auto;
	padding: 25rpx 25rpx 50rpx;
	width: 675rpx;
	min-height: 210rpx;
	background-color: #0081ff;
	border-radius: 15rpx;
}
.msg .item .msg-info{
	margin-top: 20rpx;
	word-wrap: break-word;
	line-height: 45rpx;
	overflow: hidden;
	text-overflow: ellipsis;
}
.msg .item .time{
	position: absolute;
	top: 25rpx;
	right: 25rpx;
}
.msg .item .industry{
	position: absolute;
	bottom: 25rpx;
	right: 25rpx;
}