.result-search{
  background: linear-gradient(to right,#Ff9700,#Ed1c24);
  padding-left:30rpx ;
  padding-right: 30rpx;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.result-search-font{
  font-size: 50rpx;
  color: white;
  font-weight: 500;
  letter-spacing: 1.5rpx;
}
.result-search-icon{
  width: 45rpx;
  height: 45rpx;
}
.result-container{
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 0 20rpx;
  padding-left:40rpx;
  padding-right: 40rpx;
  border-radius: 5%;
}
.result-position-salary{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.result-position{
  display: block;
	overflow: hidden;
  text-overflow: ellipsis;
	white-space: nowrap;
	width:350px;
  font-size: 34rpx;
  font-weight: 600;
  /* color:#333; */
}
