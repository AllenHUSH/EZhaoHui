<cu-custom bgImage="" style="background: linear-gradient(to right,#Ff9700,#Ed1c24);" isBack="{{true}}">
<view slot="backText" style="color:white;">返回</view>
  <view slot="content" style="color:white;">E招会</view>
</cu-custom>

